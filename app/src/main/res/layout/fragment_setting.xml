<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar" />

    <wailaixing.com.palmuniversity.widget.SpringScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <RelativeLayout
                android:id="@+id/about_me"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:foreground="?attr/selectableItemBackground">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/default_grow_margin"
                    android:text="关于我"
                    android:textColor="@color/font_normal"
                    android:textSize="@dimen/default_medium_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/default_grow_margin"
                    android:src="@drawable/register_bottom_arrow" />

            </RelativeLayout>
            
            
            <View
                android:layout_height="1sp"
                android:layout_width="match_parent"
                android:background="@color/btn_primary_disable_bg" />

            <RelativeLayout
                android:id="@+id/about_app"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#FFFFFF"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/default_grow_margin"
                    android:text="关于掌上校园"
                    android:textColor="@color/font_normal"
                    android:textSize="@dimen/default_medium_text_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/default_grow_margin"
                    android:src="@drawable/register_bottom_arrow" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_corner_bg"
                android:layout_marginBottom="@dimen/default_general_margin"
                android:layout_marginLeft="@dimen/default_general_margin"
                android:layout_marginRight="@dimen/default_general_margin"
                android:layout_marginTop="@dimen/default_long_margin"
                android:text="退出登录"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </wailaixing.com.palmuniversity.widget.SpringScrollView>

</LinearLayout>